{
    "name": "suvidha",
    "version": "0.2.2",
    "description": "Suvidha is a lightweight, type-safe Express.js library that adds powerful validation, middleware context management, and response handling.",
    "main": "./build/cjs/index.js",
    "module": "./build/esm/index.js",
    "types": "./build/types/index.d.ts",
    "directories": {
        "doc": "docs",
        "test": "test"
    },
    "files": [
        "./build"
    ],
    "scripts": {
        "test": "jest --testTimeout=12000",
        "fmt": "npx prettier --write .",
        "clean": "rm -rf ./build",
        "check": "npx tsc --noEmit",
        "build": "tsc -b ./tsconfig.cjs.json ./tsconfig.esm.json ./tsconfig.types.json"
    },
    "author": "ishwar gowda",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ishwar00/suvidhajs.git"
    },
    "bugs": {
        "url": "https://github.com/ishwar00/suvidhajs/issues"
    },
    "keywords": [
        "typescript",
        "schema",
        "validation",
        "type",
        "inference",
        "express",
        "zod",
        "middleware",
        "context",
        "validation-layer",
        "request-validation"
    ],
    "license": "ISC",
    "devDependencies": {
        "@babel/core": "^7.25.2",
        "@babel/preset-env": "^7.25.4",
        "@babel/preset-typescript": "^7.24.7",
        "@types/jest": "^29.5.12",
        "babel-jest": "^29.7.0",
        "express": "^4.21.2",
        "jest": "^29.7.0",
        "supertest": "^7.0.0",
        "typescript": "^5.5.4"
    },
    "dependencies": {
        "@types/express": "^4.17.21",
        "zod": "^3.23.8"
    }
}
